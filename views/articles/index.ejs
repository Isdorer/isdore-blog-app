<%- include ("../partials/header") %>

    
        <div class="container">
        <img src="https://picsum.photos/536/354.jpg">
        <div>
            <a href="articles/new" class="btn btn-success mt-2 ms-2">New Article</a>
        </div>
        

        <% articles.forEach(article => { %>
            <div class="card mt-4 mb-4" >
            <div class="card-body">
            <h4 class="card-title"> <%= article.title %></H4>
            <div class="card-subtitle text-muted mb-2">
                  <%= article.createdAt.toLocaleDateString() %>
                  </div>
                 <div class="card-text mt-4 desc" ><%= article.description %></div>


                 <div class="buttons">
                    <a href="articles/<%= article.slug %>" class="btn btn-primary ms-2 "> Read more</a>
                    <a href="articles/edit/<%= article.id %>" class="btn btn-info ms-2 "> Edit</a>
                    <form action="/articles/<%= article.id %>?_method=DELETE " method="POST">
                    <button type="submit" class="btn btn-danger mt-2 ms-2 ">delete</button>
                  </form>
               </div>
                  </div>
             
             </div>

            
            
       <% })%>
    </div>
    <%- include ("../partials/footer") %>

